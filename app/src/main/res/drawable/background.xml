<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E0E0E0"
                android:endColor="#FAFAFA"
                android:angle="90"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="4dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#6A1B9A"/>
        </shape>
    </item>
</layer-list>